<?xml version="1.0" encoding="utf-8"?>
<skin.support.constraint.SkinCompatConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_dialog_bg"
    android:paddingTop="@dimen/global_content_padding_edge"
    android:paddingBottom="@dimen/global_content_padding_edge">

    <skin.support.widget.SkinCompatTextView
        android:id="@+id/tv_notify"
        style="@style/GlobalTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent" />

    <com.jungly.gridpasswordview.GridPasswordView
        android:id="@+id/gpv_password"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/global_content_padding_edge"
        app:layout_constraintDimensionRatio="H,6:1"
        app:layout_constraintTop_toBottomOf="@+id/tv_notify" />

</skin.support.constraint.SkinCompatConstraintLayout>