<?xml version="1.0" encoding="utf-8"?>
<skin.support.constraint.SkinCompatConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/global_short_list_item_height"
    android:paddingStart="@dimen/global_content_padding_edge"
    android:paddingEnd="@dimen/global_content_padding_edge">

    <com.lizl.wtmg.module.skin.view.SkinImageView
        android:id="@+id/iv_boolean_icon"
        style="@style/SettingItemIconStyle" />

    <skin.support.widget.SkinCompatTextView
        android:id="@+id/tv_boolean_setting_name"
        style="@style/GlobalTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="@dimen/global_content_padding_content"
        android:gravity="start|center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_boolean_setting_checked"
        app:layout_constraintStart_toEndOf="@+id/iv_boolean_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <com.lizl.wtmg.module.skin.view.SkinImageView
        android:id="@+id/iv_boolean_setting_checked"
        android:layout_width="@dimen/global_toggle_btn_size"
        android:layout_height="@dimen/global_toggle_btn_size"
        android:tint="@color/colorSvgTint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_toggle" />

</skin.support.constraint.SkinCompatConstraintLayout>