<?xml version="1.0" encoding="utf-8"?>
<skin.support.constraint.SkinCompatConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.lizl.wtmg.module.skin.view.SkinImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/toolbar_back_icon_size"
        android:layout_height="@dimen/toolbar_back_icon_size"
        android:layout_marginStart="@dimen/toolbar_content_padding_edge"
        android:paddingTop="@dimen/toolbar_back_icon_padding"
        android:paddingBottom="@dimen/toolbar_back_icon_padding"
        android:scaleType="fitStart"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:tint="@color/colorSvgTint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <skin.support.widget.SkinCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextColor"
        android:textSize="@dimen/toolbar_title_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_back"
        app:layout_constraintTop_toTopOf="parent" />

    <skin.support.widget.SkinCompatTextView
        android:id="@+id/tv_action"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/toolbar_content_padding_edge"
        android:paddingEnd="@dimen/toolbar_content_padding_edge"
        android:textColor="@color/colorTextColor"
        android:textSize="@dimen/toolbar_action_text_size"
        app:layout_constraintEnd_toEndOf="parent" />

</skin.support.constraint.SkinCompatConstraintLayout>